#include <iostream>

int main() {
  int a1[5];
  int a2[5000] = {100};

  for (int i = 0; i < 5000; i++) a2[i] = 0;

    // while (a2)
    // std::cout << *a2 << std::endl;

    int i = 7;
    int* p1;
